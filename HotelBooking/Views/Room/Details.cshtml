                                        @if (Model.Comment.Id == Model.Comment.RoomId)
                                        {
                                            <h3> @Model.Comments.Count  Comments</h3>
                                        }
                                        else
                                        {
                                            <h3>Comments</h3>
                                        }





                                    </div>
                                    <div class="mt-4">
                                        @foreach (var item in Model.Comments)

                                        {

                                            if (Model.Room.Id == item.RoomId)
                                            {
                                                <div class="testimonial-item">

                                                    <div class="d-flex" style="color:yellow">
                                                        @for (int i = 0; i < @item.Star; i++)

                                                        {

                                                            <i class="fa-solid fa-star"></i>

                                                        }


                                                    </div>
                                                    <p>
                                                        @item.Message
                                                    </p>

                                                    <div class="author d-flex align-items-center">
                                                        <div class="img">
                                                            <img src="~/assets/images/testimonial/a29002da-efbd-449d-afe8-285e47027d78pngwing.com.png" alt="">
                                                        </div>
                                                        <div class="d-flex">
                                                            <div>
                                                                <div class="name">@item.Name</div>
                                                                <div style="color:#555;">
