                                                    </div>
                                                    <div class="col-lg-6">
                                                        <input class="form-control w-100" type="hidden"
                                                               value="@Model.Room.Id" asp-for="Comment.RoomId" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <button class="btn btn-outline-dark" type="submit">Add Comment</button>
                                        </div>
                                    </form>
                                    <div class="pagination">
                                        <a asp-controller="room" asp-action="details" asp-route-page="@(ViewBag.CurrentPage-1)" class="prev @(ViewBag.CurrentPage == 1 ? "active pointerEvent"  : "") "><i class="fa-solid fa-arrow-left"></i></a>
