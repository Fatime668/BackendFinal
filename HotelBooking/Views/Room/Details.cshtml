                                            </li>
                                        </ul>
                                    }
                                </div>
                                <div class="owl-carousel owl-theme">
                                    @foreach (RoomPicture item in Model.Room.RoomPictures.Where(r => r.IsMain == false))
                                    {
                                        <div class="item">
                                            <img src="~/assets/images/rooms/@item.ImagePath" alt="">
                                        </div>
                                    }
                                </div>
                                <div class="review">
