@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}
@section Links{
    <style>
        .card{
            padding:30px;
        }
       
        row{
            align-items:center;
        }
       div.dataTables_wrapper div.dataTables_info {
    padding-top: 2.65em;
}
        .dataTables_paginate{
             padding:30px 20px;
        }
    </style>
}
<div class="my-3">
    <a class="btn btn-outline-dark" asp-controller="contact" asp-action="create">Create</a>
</div>
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Settings</h4>
    </div>
    <div class="card-content">
        <!-- table hover -->
        <div class="table-responsive">
            <table id="myTable" class="table table-hover">
                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Id)</th>
                        <th> @Html.DisplayNameFor(model => model.Name)</th>
                        <th> @Html.DisplayNameFor(model => model.Email)</th>
                        <th> @Html.DisplayNameFor(model => model.Subject)</th>
                        <th> @Html.DisplayNameFor(model => model.Content)</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @Html.DisplayFor(modelItem => item.Id)</td>
                            <td> @Html.DisplayFor(modelItem => item.Name)</td>
                            <td> @Html.DisplayFor(modelItem => item.Email)</td>
                            <td> @Html.DisplayFor(modelItem => item.Subject)</td>
                            <td> @Html.DisplayFor(modelItem => item.Content)</td>
                            <td class="d-flex p-2">
                                <a asp-controller="contact" asp-action="edit" style="margin-left:15px" class="p-2 btn btn-warning" asp-route-id="@item.Id"><i class="fa-solid fa-pen-fancy"></i></a>
                                <a asp-controller="contact" asp-action="delete" style="margin-left:15px" class="p-2 btn btn-danger" asp-route-id="@item.Id"><i class="fa-regular fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#myTable").DataTable({
                "scrollY": "450px",
                "scrollCollapse": true,
                "paging": true,

            });
        });
    </script>
}