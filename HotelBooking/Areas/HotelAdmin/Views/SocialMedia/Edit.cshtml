@model SocialMedia
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}

<div class="my-5">
    <h1>Edit</h1>

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<form method="post">
    <div>
        <label>Key:</label>
        <input asp-for="Key" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Key"></span>
    </div>
    <div>
        <label>Value:</label>
        <input asp-for="Value" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Value"></span>
    </div>
    <div class="d-flex">
        <div>
            <button class="btn  btn-outline-warning" type="submit">Edit</button>
        </div>
        <div style="margin-left:15px">
            <button class="btn btn-outline-primary" asp-controller="socialmedia" asp-action="index">Back to list</button>
        </div>
    </div>
</form>
</div>