
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}
@model Approach
<h1>Detail</h1>

<div>
    <div>
        <h4>
            Id
        </h4>
        <p>
            @Model.Id
        </p>
    </div>
    <div>
        <h4>
            Title
        </h4>
        <p>
            @Model.Title
        </p>
        
    </div>
     <div>
        <h4>
            Description
        </h4>
        <p>
            @Model.Description
        </p>
    </div>
     <div>
        <h4>
            Text
        </h4>
       @if (Model.Text == "" || Model.Text==null)
            {
                <p class="alert alert-danger">Empty!</p>
            }
            else
            {
                <p>@Model.Text</p>
            }
    </div>
     <div>
        <h4>
            Number
        </h4>
        <p>
            @Model.Number
        </p>
    </div>
   <div>
            <a class="btn btn-outline-primary" asp-controller="approach" asp-action="index">Back to list</a>
        </div>
</div>