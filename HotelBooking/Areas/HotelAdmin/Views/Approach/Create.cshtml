@model Approach
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}
<div class="my-5">
    <h1>Create</h1>
<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<form method="post" >
    <div>
        <label>Title:</label>
        <input asp-for="Title" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div>
        <label>Description:</label>
        <input asp-for="Description" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div>
        <label>Text:</label>
        <input asp-for="Text" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Text"></span>
    </div>
    <div>
        <label>Number:</label>
        <input asp-for="Number" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Number"></span>
    </div>
    <div class="d-flex">
        <div>
            <button class="btn btn-outline-success" type="submit">Create</button>
        </div>
        <div style="margin-left:15px">
            <button class="btn btn-outline-primary" asp-controller="approach" asp-action="index">Back to list</button>
        </div>
    </div>
</form>
</div>
