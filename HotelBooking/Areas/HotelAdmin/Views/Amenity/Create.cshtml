@model Amenity
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}
<div class="my-5">
    
<h1>Create</h1>
<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<form method="post" enctype="multipart/form-data">
    <div>
        <label>Name:</label>
        <input asp-for="Name" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
   
    <div>
        <label>Photo:</label>
        <input asp-for="Photo" accept="image/*" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div class="d-flex">
        <div>
            <button class="btn btn-outline-dark" type="submit">Create</button>
        </div>
        <div style="margin-left:15px">
            <button class="btn btn-outline-primary" asp-controller="amenity" asp-action="index">Back to list</button>
        </div>
    </div>
</form>

</div>