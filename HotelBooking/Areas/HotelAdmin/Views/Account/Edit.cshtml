@model AppUser
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}

<div class="my-5">
    <h1>Edit</h1>
<form method="post">
    <div>
        <label>Username:</label>
        <input readonly asp-for="UserName" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>
    <div>
        <label>Firstname:</label>
        <input readonly asp-for="Firstname" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Firstname"></span>
    </div>
    <div>
        <label>Lastname:</label>
        <input readonly asp-for="Lastname" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Lastname"></span>
    </div>
    @* <div>
        <label>Image:</label>
        <input asp-for="ImageUrl" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>*@
     <div>
        <label>IsBLock:</label>
        <input asp-for="IsBlock" /><br />
        <span class="text-danger" asp-validation-for="IsBlock"></span>
    </div>
    <div class="d-flex">
        <div>
            <button class="btn  btn-outline-warning" type="submit">Edit</button>
        </div>
        <div style="margin-left:15px">
            <button class="btn btn-outline-primary" asp-controller="account" asp-action="index">Back to list</button>
        </div>
    </div>
</form>
</div>