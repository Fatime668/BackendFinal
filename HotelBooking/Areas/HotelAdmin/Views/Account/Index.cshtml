@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}

    <div class="mt-5">
        <h1>Users</h1>
        <table class="table table-hover table-light mb-4">
        <thead>
            <tr>
                <th>Username</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th class="text-center">IsBlock</th>
                <th class="text-center">Action</th>
            </tr>
            
        </thead>
        <tbody>
            @if (Model.Count()==0)
            {
                <tr>
                    <td colspan="5" class="text-center">
                        User does not exist!
                    </td>
                </tr>
            }
            else
            {
                 @foreach (var item in Model)
            {
                <tr >
                    <td class="text-success">@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Firstname)</td>
                    <td>@Html.DisplayFor(modelItem => item.Lastname)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsBlock)</td>
                    <td class="text-center">

                        <div class="dropdown custom-dropdown">

                            <a  asp-controller="account" asp-action="IsBlock" asp-route-id="@item.Id" class="btn btn-light-secondary" >
                              @(item.IsBlock ? "Unblock" : "Block")
                            </a>

                           
                        </div>
                    </td>
                </tr>
            }
            }
           
        </tbody>
    </table>
    </div>
   