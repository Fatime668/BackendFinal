@model RoomType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}

<div class="my-5">
    <h1>Create</h1>

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<form method="post" >
