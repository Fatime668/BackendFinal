@model Gallery
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}
<div class="my-5">
    <h1>Edit</h1>
<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<form method="post"enctype="multipart/form-data" >
    <div>
        <label>Title:</label>
        <input asp-for="Title" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div>
        <label>Subtitle:</label>
        <input asp-for="Subtitle" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Subtitle"></span>
    </div>
     <div>
        <label class="mb-3">Gallery image:</label><br />
        <input asp-for="Photo" class="input-group-prepend form-control-file" accept="image/*" /><br />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
      <div>
        <label class="mb-3">Categories:</label><br />
        <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))"></select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>
    <div class="d-flex my-3">
        <div>
            <button class="btn btn-warning" type="submit">Edit</button>
        </div>
        <div style="margin-left:15px">
            <button class="btn btn-outline-primary" asp-controller="gallery" asp-action="index">Back to list</button>
        </div>
    </div>
</form>
</div>
