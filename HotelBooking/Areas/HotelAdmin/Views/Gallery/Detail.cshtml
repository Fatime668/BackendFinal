@model Gallery
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}
<h1>Detail</h1>
<div>
    <div>
        <h4>
            Id
        </h4>
        <p>
            @Model.Id
        </p>
    </div>
    <div>
        <h4>
            Title
        </h4>
        <p>
            @Model.Title
        </p>
        
    </div>
     <div>
        <h4>
            Subtitle
        </h4>
        <p>
            @Model.Subtitle
        </p>
    </div>
     <div>
        <h4>
            Image
        </h4>
        <p>
            <img width="200px" height="200px" src="~/assets/images/gallery/all/@Model.ImagePath" />
        </p>
    </div>
   <div>
            <a class="btn btn-outline-primary" asp-controller="gallery" asp-action="index">Back to list</a>
        </div>
</div>