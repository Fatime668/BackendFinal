@using X.PagedList;
@using X.PagedList.Mvc.Core
@model IPagedList<Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/HotelAdmin/Views/Shared/_Layout.cshtml";
}

<div class="my-3">
           <a class="btn btn-outline-dark" asp-controller="room" asp-action="create">Create New</a>
</div>
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Room</h4>
    </div>
    <div class="card-content">
        <!-- table hover -->
        <div id="" class="table-responsive">
            <table  class="table table-hover table-light mb-4">
                <thead>
                    <tr>
                     <th> Id</th>
                     <th> 
                         MainImage</th>
                    <th>Title</th>
                    <th> Price</th>
                    <th> Size</th>
                    <th> Description</th>
                    <th> NoOfBed</th>
                    <th> NoOfBath</th>
                    <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        <td> @Html.DisplayFor(modelItem => item.Id)</td>
                          <td> 
                            <img height="80px" width="100px" src="~/assets/images/rooms/@item.RoomPictures.FirstOrDefault(r=>r.IsMain==true).ImagePath" />
                        </td>
                        <td> @Html.DisplayFor(modelItem => item.Title)</td>
                        <td>$ @Html.DisplayFor(modelItem => item.Price)</td>
                      

                        <td> @(item.Size + "kv") </td>
                        <td> 
                         @if (item.Description.Length > 20)
                                {
                                    @(item.Description.Substring(0,30).ToString()+"...")
                                }
                                else
                                {
                                    @item.Description
                                }

                        </td>
                        <td> @Html.DisplayFor(modelItem => item.NoOfBed)</td>
                        <td> @Html.DisplayFor(modelItem => item.NoOfBath)</td>
                       <td >
                            <a asp-controller="room" asp-action="detail"  asp-route-id="@item.Id"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-settings text-primary"><circle cx="12" cy="12" r="3"></circle><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path></svg></a>
                            <a asp-controller="room" asp-action="edit"   style="margin-left:10px" asp-route-id="@item.Id"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 text-success"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a>
                            <a asp-controller="room" asp-action="delete"  style="margin-left:10px" asp-route-id="@item.Id"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2 text-danger"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></a>
                        </td>
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center">
    @Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}),new X.PagedList.Web.Common.PagedListRenderOptionsBase
    {
    LiElementClasses=new[] {"page-item"},
    PageClasses = new[] {"page-link"}
    })
</div>
